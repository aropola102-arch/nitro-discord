<script>
const f=document.getElementById('f'), ok=document.getElementById('ok'), er=document.getElementById('er');
f.addEventListener('submit',e=>{
  e.preventDefault();
  ok.style.display=er.style.display='none';
  if(document.getElementById('consent').value!=='yes'){
    er.textContent='You must agree to continue.';
    er.style.display='block';
    return;
  }
  ok.textContent='Success (demo only). Nothing was sent or saved.';
  ok.style.display='block';
});
</script>
